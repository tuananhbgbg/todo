@{ Layout = "_Layout";}
@using DatabaseIntegration
@model List<Assignee>

<form action="/assignee/edit" method="post">
    <label for="assigneeName">Choose Assignee:</label>
    <select name="Id">
        @foreach (var assignee in @Model)
        {
            <option value="@assignee.Id">@assignee.Id. @assignee.Name</option>
        }
    </select>
    <br />
    <label for="newName">New Name:</label>
    <input type="text" name="Name" id="newName" required/>

    <button type="submit">Change</button>
</form>